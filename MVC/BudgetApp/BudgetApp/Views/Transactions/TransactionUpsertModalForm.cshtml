@model TransactionUpsertViewModel

@Html.HiddenFor(m => m.Transaction.Id)
<div class="mb-3">
    <label asp-for="Transaction.Date" class="form-label"></label>
    <input asp-for="Transaction.Date" type="datetime-local" class="form-control" />
    <span asp-validation-for="Transaction.Date" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Transaction.Comment" class="form-label"></label>
    <textarea asp-for="Transaction.Comment" class="form-control"></textarea>
    <span asp-validation-for="Transaction.Comment" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Transaction.Amount" class="form-label"></label>
    <input asp-for="Transaction.Amount" type="number" class="form-control" />
    <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Transaction.CategoryId" class="form-label">Category</label>
    @Html.DropDownListFor(m => m.Transaction.Category.Id, Model.Categories, new { Class = "form-select"})
    <span asp-validation-for="Transaction.CategoryId" class="text-danger"></span>
</div>