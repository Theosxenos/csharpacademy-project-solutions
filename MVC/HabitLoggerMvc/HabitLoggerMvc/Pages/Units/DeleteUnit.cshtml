@page
@model HabitLoggerMvc.Pages.Units.DeleteUnit

<h2>Delete @Model.HabitUnit.Name?</h2>
@if (Model.CanDelete)
{
    <div class="alert alert-warning">
        Are you sure you want to delete the unit?
    </div>
    <div class="row">
        <form method="post">
            @Html.HiddenFor(model => model.HabitUnit.Id)
            <button class="btn btn-danger" type="submit">Delete</button>
            <a class="btn btn-secondary" asp-page="./Units">Cancel</a>
        </form>
    </div>
} else {
    <div class="alert alert-danger">
        Can't delete unit because there are habits coupled to this unit. Delete them first.
    </div>
    <a class="" asp-page="./Units">Back to units list</a>
}