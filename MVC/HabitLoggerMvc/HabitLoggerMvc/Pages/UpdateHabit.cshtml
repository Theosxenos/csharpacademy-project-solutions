@page
@model HabitLoggerMvc.Pages.UpdateHabit

<form>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Habit.Name" class="form-label"></label>
                    <input type="text" asp-for="Habit.Name" class="form-control"/>
                    <span asp-validation-for="Habit.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Habit.HabitUnitId" class="form-label">Unit</label>
                    <select asp-for="Habit.HabitUnitId" asp-items="@(new SelectList(Model.HabitUnits, "Id", "Name"))" class="form-control">
                        <option disabled="">Please select an unit</option>
                    </select>
                    <span asp-validation-for="Habit.HabitUnitId" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>
</form>