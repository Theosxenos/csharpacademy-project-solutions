@page
@model UpdateHabit

<h2 class="mb-4 text-center">Update Habit @Model.HabitModel.Name</h2>
<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">
            @Html.HiddenFor(habit => habit.HabitModel.Id)

            <div class="mb-3">
                <label asp-for="HabitModel.Name" class="form-label"></label>
                <input type="text" asp-for="HabitModel.Name" class="form-control"/>
                <span asp-validation-for="HabitModel.Name" class="invalid-feedback d-block"></span>
            </div>

            <div class="mb-3">
                <label asp-for="HabitModel.HabitUnitId" class="form-label">Unit</label>
                <select asp-for="HabitModel.HabitUnitId" asp-items="@(new SelectList(Model.HabitUnits, "Id", "Name"))" class="form-control">
                    <option disabled>Please select an unit</option>
                </select>
                <span asp-validation-for="HabitModel.HabitUnitId" class="invalid-feedback d-block"></span>
            </div>

            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Update</button>
                <a class="btn btn-outline-secondary" asp-page="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>