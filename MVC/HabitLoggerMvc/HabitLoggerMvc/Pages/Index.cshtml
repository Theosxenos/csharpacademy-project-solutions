@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center mb-4">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="table-responsive">
    <table class="table align-middle">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Habits[0].Name)</th>
            <th class="text-end">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var habit in Model.Habits)
        {
            <tr>
                <td>@Html.DisplayFor(model => habit.Name)</td>
                <td class="text-end">
                    <a class="btn btn-outline-primary btn-sm me-1" asp-page="./DetailHabit" asp-route-id="@habit.Id" title="View Details">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a class="btn btn-outline-secondary btn-sm me-1" asp-page="./UpdateHabit" asp-route-id="@habit.Id" title="Edit">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a class="btn btn-outline-danger btn-sm" asp-page="./DeleteHabit" asp-route-id="@habit.Id" title="Delete">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div class="d-flex justify-content-end">
    <a class="btn btn-outline-success" asp-page="./NewHabit">+ New Habit</a>
</div>