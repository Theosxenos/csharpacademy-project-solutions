@page
@model HabitLoggerMvc.Pages.DetailHabit

<h2>Viewing logs for the habit: @Model.HabitModel.Name</h2>
<div class="row">
    <table class="table">
        <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Quantity
            </th>
            <th>
                Unit
            </th>
            <th>
                Manage
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var log in Model.HabitLogs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => log.Date)
                </td>
                <td>
                    @Html.DisplayFor(model => log.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(model => model.HabitUnit.Name)
                </td>
            <td>
                <a class="btn btn-warning" asp-page="./UpdateHabitLog" asp-route-id="@log.Id">
                    <i class="bi bi-pencil"></i>
                </a>
                <a class="btn btn-danger" asp-page="./DeleteHabitLog" asp-route-id="@log.Id">
                    <i class="bi bi-trash"></i>
                </a>
            </td>
            </tr>
        }
        </tbody>
    </table>
    <div class="d-flex justify-content-end">
        <a class="btn btn-success" asp-page="./AddHabitLog" asp-route-id="@Model.HabitModel.Id">Add new log</a>
    </div>
</div>